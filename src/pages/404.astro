---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Página no encontrada" description="La página que buscas no existe.">
  <section class="container" style="padding: 6rem 1.5rem; text-align: center;">
    <h1 style="font-size: 4rem; color: var(--color-accent);">404</h1>
    <p style="font-size: 1.2rem; color: var(--color-text-muted); margin-bottom: 2rem;">
      La página que buscas no existe o fue movida.
    </p>
    <a href="/">← Volver al inicio</a>
  </section>
</BaseLayout>
