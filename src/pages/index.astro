---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Inicio"
  description="Nuestro blog sobre tecnología, desarrollo y más. Artículos escritos por nuestro equipo."
>
  <section class="container" style="padding: 3rem 1.5rem;">
    <h1 style="margin-bottom: 0.5rem;">Últimos artículos</h1>
    <p style="color: var(--color-text-muted); margin-bottom: 2rem;">
      Ideas, aprendizajes y cosas que nos parecen interesantes.
    </p>

    <ul class="post-list">
      {posts.map((post) => (
        <li>
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            author={post.data.author}
            slug={post.id}
            tags={post.data.tags}
          />
        </li>
      ))}
    </ul>

    {posts.length === 0 && (
      <p style="color: var(--color-text-muted); text-align: center; padding: 4rem 0;">
        Aún no hay artículos publicados. ¡Pronto vendrán!
      </p>
    )}
  </section>
</BaseLayout>
